<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">


    <Button
        android:id="@+id/btnHomeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
       android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btnHomeEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:layout_margin="30dp"
        android:layout_below="@id/btnHomeName"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btnHomePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20sp"
        android:layout_margin="30dp"
        android:layout_below="@id/btnHomeEmail"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/btnHomeShowAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show All"
        android:textSize="20sp"
        android:layout_margin="30dp"
        android:layout_below="@id/btnHomePass"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>